# Jenkins Environment Configuration
# Copy this file to .env and fill in your credentials
# DO NOT commit .env to version control

# ====================================
# BrowserStack Credentials
# ====================================
BROWSERSTACK_USERNAME=your_username
BROWSERSTACK_ACCESS_KEY=your_access_key

# ====================================
# Jira/Xray Credentials
# ====================================
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your_email@example.com
JIRA_API_TOKEN=your_api_token

# ====================================
# API Endpoints (for real API testing)
# ====================================
API_BASE_URL_STAGING=https://api-staging.example.com
API_BASE_URL_UAT=https://api-uat.example.com
API_BASE_URL_PROD=https://api.example.com
API_AUTH_TOKEN=your_auth_token

# ====================================
# Jenkins Configuration
# ====================================
JENKINS_ADMIN_PASSWORD=admin
JENKINS_PORT=8080
JENKINS_AGENT_PORT=50000

# ====================================
# Local Project Mount (Phase 10)
# ====================================
# Path to local project directory for Jenkinsfile access
# macOS: Ensure path is shared in Docker Desktop → Settings → Resources → File Sharing
# Replace with YOUR actual project path
PROJECT_PATH=/path/to/your/project
